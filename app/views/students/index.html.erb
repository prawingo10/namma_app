<h1>index page</h1>
<table style="border:1px solid white;">
  <thead>
    <tr>
      <th>NAME</th>
      <th>SUBJECT</th>
      <th>AGE</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <%@student.each do |stud|%>
      <tr>
        <td><%=stud.name%></td>
        <td><%=stud.subject%></td>
        <td><%=stud.age%></td>
        <td><%=link_to 'DELETE', student_path(id: stud.id), method: :delete%></td>
        <td><%=link_to 'SHOW', student_path(stud)%></td>
        <td><%=link_to 'EDIT', edit_student_path(stud)%></td>

      </tr>

    <%end%>
  </tbody>
</table>
